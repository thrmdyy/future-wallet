{
  "manifest_version": 3,
  "name": "Future Wallet",
  "version": "0.0.1",
  "description": "Future Crypto Wallet",
  "minimum_chrome_version": "102",
  "action": {
    "default_title": "Future Wallet",
    "default_popup": "index.html"
  },
  "icons": {
    "192": "logo.png",
    "512": "logo.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "activeTab",
    "notifications",
    "alarms"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}